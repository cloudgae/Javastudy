package chap3;

public class Exam5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		byte a = 10;
		byte b = 20;
		byte c = (byte) (a + b);
		//int c = a + b;
		char ch = 'A';
		//ch = (char) (ch + 2);
		ch += 2;
		float f =3/2f;
		long l = 3000L * 3000 * 3000; // 한 개만 long으로 만들어도 됨
		float f2 = 0.1f;
		double d = 0.1f;
		boolean result = d == f2;
		System.out.println("c=" + c);
		System.out.println("ch=" + ch);
		System.out.println("f=" + f);
		System.out.println("l=" + l);
		System.out.println("result=" + result); //false나오는 건 자바의 오류
		//d = 0.1f 해야 함
		//double에서의 0.1과 float의 0.1은 다름
		
		System.out.printf("%.20f\n", 0.1f);
		System.out.printf("%.20f\n", 0.1);
	}

}
