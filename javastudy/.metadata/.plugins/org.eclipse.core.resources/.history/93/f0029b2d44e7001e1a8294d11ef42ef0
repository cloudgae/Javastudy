package chap04;

import java.util.Scanner;

/*
 * while 구문 예제
 * 숫자 맞추기
 * 컴퓨터가 1에서 100 사이의 임의의 정수를 저장하고 있음
 * 사용자는 컴퓨터의 저장 숫자를 맞추기
 * 시스템 : 37 가정
 * [결과]
 * 1~100사이의 숫자를 입력하세요
 * 50
 * 작은 수입니다.
 * 25
 * 큰 수입니다.
 * 40
 * 작은 수입니다.
 * 37
 * 정답입니다.
 * 프로그램을 종료합니다.
 */
public class Exam12 {

	public static void main(String[] args) {
		int cnum = (int) (Math.random()*100) +1;
		int num=0;
		System.out.println("답:" + cnum);
		
		System.out.println("1~100사이의 숫자를 입력하세요");
		
		while(num != cnum) {
			Scanner scan = new Scanner(System.in);
			num = scan.nextInt();
			if(num < cnum) {
				System.out.println("큰 수입니다.");
				continue;
			}
			else{
				System.out.println("작은 수입니다.");
				continue;
			}
//			else {
//				System.out.println("정답입니다.");
//				System.out.println("프로그램을 종료합니다.");
//				break;
//			}
			System.out.println("정답입니다.");
			System.out.println("프로그램을 종료합니다.");
		}
		
//		while(true) {
//			Scanner scan = new Scanner(System.in);
//			num = scan.nextInt();
//			if(num < cnum) {
//				System.out.println("큰 수입니다.");
//				continue;
//			}
//			else if (num > cnum){
//				System.out.println("작은 수입니다.");
//				continue;
//			}
//			else {
//				System.out.println("정답입니다.");
//				System.out.println("프로그램을 종료합니다.");
//				break;
//			}
//		}
	}
}
