/*
 * 1-100까지 합을 실행할때 합이 처음으로 천을 넘는 숫자를 출력
 * 숫자와 합을 출력
 */
public class LoopEx7 {

	public static void main(String[] args) {
		int sum = 0, i = 0;
//		for(i = 0; i<101; i++) {
//			if(sum < 1000) {
//				sum += i;
//			}
//			else {
//				break;
//			}
//		}
//		System.out.println(i + "," + sum); //i값이 하나 더 증가해서 나옴
		
		sum = 0;
		i = 0;
		for(i = 0; i<101; i++) {
			sum += i;
			if(sum > 1000) break;
		}
		System.out.println(i + "," + sum);

		for(i=1;i<46;i++) {
			sum+=i;
		}System.out.println(sum);
	}

}
