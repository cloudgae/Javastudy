package chap3;

public class OpEx7 {

	public static void main(String[] args) {
		//printf : format을 지정하여 출력 가능
		//%d : 10진 정수 형태로 출력
		int num = 100;
		System.out.printf("%d, %d\n", num, 12345);
		//%10d : 10진 정수를 최소 10자리로 출력
		System.out.printf("%10d, %10d\n", num, 12345);		
		//%10d : 10진 정수를 최소 10자리로 왼쪽 정렬로 출력 : %-10d
		System.out.printf("%-10d, %-10d\n", num, 12345);
		//%10d : 10진 정수를 최소 10자리로 왼쪽 정렬로 ,도 출력 : %-,10d
		System.out.printf("%-,10d, %-,10d\n", num, 12345);	
		//%10d : 10진 정수를 최소 10자리로, 빈 자리는 0으로 채워 출력 : %010d
		System.out.printf("%010d, %010d\n", num, 12345);
		
		//%f : 실수(부동소수점) 형태로 출력 (정수:고정소수점)
		System.out.printf("%d, %f\n", num, 1234.145); //num이 int라서
		//10자리 확보하고, 소수점 이하 2자리 출력 - 자동 반올림이 됨=>반올림 필요없을 땐 사용x
		System.out.printf("%10.2f\n", 1234.145);
		//10자리 확보하고, 소수점 이하 2자리 출력, 세자리마다 , 출력
		System.out.printf("%,10.0f\n", 1234.145);
	}

}
