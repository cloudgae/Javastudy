package chap04;

import java.util.Scanner;

/*
 * while 구문 예제
 * 숫자 맞추기
 * 컴퓨터가 1에서 100 사이의 임의의 정수를 저장하고 있음
 * 사용자는 컴퓨터의 저장 숫자를 맞추기
 * 시스템 : 37 가정
 * [결과]
 * 1~100사이의 숫자를 입력하세요
 * 50
 * 작은 수입니다.
 * 25
 * 큰 수입니다.
 * 40
 * 작은 수입니다.
 * 37
 * 정답입니다.
 * 입력횟수:4=>빠르시네요. (추가)
 * 프로그램을 종료합니다.
 * 
 * ==========
 * 입력횟수가 5번 이하인 경우 : 빠르시네요
 * 입력횟수가 6~10이하인 경우 : 보통입니다.
 * 입력횟수가 11번 이상인 경우 : 노력하세요.
 */
public class Exam12 {

	public static void main(String[] args) {
		int cnum = (int) (Math.random()*100) +1;
		int count = 0; // 입력횟수
		System.out.println("답:" + cnum);		
		System.out.println("1~100사이의 숫자를 입력하세요");			
		Scanner scan = new Scanner(System.in);
		while(true) {
			int num = scan.nextInt();
			count++; //입력횟수 누적
			if(num < cnum) {
				System.out.println("큰 수입니다.");
				continue;
			}
			else if (num > cnum){
				System.out.println("작은 수입니다.");
				continue;
			}
			else {
				System.out.println("정답입니다.");
				System.out.print("입력횟수:" + count + "=>");
				System.out.println((count<=5)?"빠르시네요":(count<=10)?"보통입니다":"노력하세요");
				break;
			}
		}
		
//		if(count<=5) {
//			System.out.println("빠르시네요.");
//		}
//		else if(count>5 && count<11) {
//			System.out.println("보통이네요.");
//		}
//		else {
//			System.out.println("노력하세요.");
//		}
		System.out.println("프로그램을 종료합니다.");
		
//----------------------------------------------------		
//		while(num != cnum) {
//			Scanner scan = new Scanner(System.in);
//			int num = scan.nextInt();
//			if(num < cnum) {
//				System.out.println("큰 수입니다.");
//				continue;
//			}
//			else if(num > cnum){
//				System.out.println("작은 수입니다.");
//				continue;
//			}
//		}
//		System.out.println("정답입니다.");
//		System.out.println("프로그램을 종료합니다.");
//----------------------------------------------------
	
	}
}
