package chap04;
/*
 * 1~100까지의 짝수의 합 출력
 * for
 * while
 * do while
 */
public class Exam4 {

	public static void main(String[] args) {
		int sum = 0;
		System.out.println("for구문으로 출력");
		for(int i = 0; i <= 100; i += 2) {
			sum += i;
		}
		System.out.println("합계:" + sum);
		
		sum = 0;
		int i = 0;
		System.out.println("while구문으로 출력");
		while(i <= 100) {
			sum += i;
			i += 2;
		}
		System.out.println("합계:" + sum);
		
		sum = 0;
		i = 0;
		System.out.println("do while구문으로 출력");
		do {
			sum += i;
			i += 2;
		}while(i <= 100);
		System.out.println("합계:" + sum);
	}

}
