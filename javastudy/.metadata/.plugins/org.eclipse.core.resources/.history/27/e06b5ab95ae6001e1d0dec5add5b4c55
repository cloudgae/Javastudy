package chap3;

public class OpEx7 {

	public static void main(String[] args) {
		//printf : format을 지정하여 출력 가능
		//%d : 10진 정수 형태로 출력
		int num = 100;
		System.out.printf("%d, %d\n", num, 12345);

		//%10d : 10진 정수를 최소 10자리로 출력
		System.out.printf("%10d, %10d\n", num, 12345);
		
		//%10d : 10진 정수를 최소 10자리로 왼쪽 정렬로 출력 : %-10d
		System.out.printf("%-10d, %-10d\n", num, 12345);
		
		//%10d : 10진 정수를 최소 10자리로 왼쪽 정렬로 ,도 출력 : %-,10d
		System.out.printf("%-,10d, %-,10d\n", num, 12345);
	}

}
